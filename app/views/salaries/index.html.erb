<p id="notice"><%= notice %></p>

<h1>Listing Salaries</h1>

<table>
  <thead>
    <tr>
      <th>Emp no</th>
      <th>Salary</th>
      <th>From date</th>
      <th>To date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salaries.each do |salary| %>
      <tr>
        <td><%= salary.emp_no %></td>
        <td><%= salary.salary %></td>
        <td><%= salary.from_date %></td>
        <td><%= salary.to_date %></td>
        <td><%= link_to 'Show', salary %></td>
        <td><%= link_to 'Edit', edit_salary_path(salary) %></td>
        <td><%= link_to 'Destroy', salary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

